<Page x:Class="BlocoDeNotas.Aplicativo.Componentes.BarraDeMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BlocoDeNotas.Aplicativo.Componentes"
      mc:Ignorable="d" 
      d:DesignHeight="40" d:DesignWidth="800"
      Title="BarraDeMenu">

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Separator Grid.ColumnSpan="3" VerticalAlignment="Top"/>
            <Separator Grid.ColumnSpan="3" VerticalAlignment="Bottom"/>
            <Menu x:Name="MenuPrincipal" Grid.Column="0" Grid.ColumnSpan="3">
                <!-- Menu Arquivo -->
                <MenuItem x:Name="MenuArquivo">
                    <MenuItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="" FontSize="16" Margin="5,0,5,0" Visibility="Collapsed"/>
                            <TextBlock Text="Arquivo" FontSize="16"/>
                        </StackPanel>
                    </MenuItem.Header>
                    <!-- Nova janela -->
                    <MenuItem x:Name="NovaJanela" Click="NovaJanela_Click">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="" FontSize="16" Margin="5,0,5,0" Visibility="Collapsed"/>
                                <TextBlock Text="Nova janela" FontSize="14" Margin="0,0,5,0"/>
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                    <!-- Fechar janela  -->
                    <MenuItem x:Name="FecharJanela" Click="FecharJanela_Click">
                        <MenuItem.Header>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="" FontSize="16" Margin="5,0,5,0" Visibility="Collapsed"/>
                                <TextBlock Text="Fechar janela" FontSize="14" Margin="0,0,5,0"/>
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                    <Separator/>
                    <!-- Abrir arquivo -->
                    <MenuItem x:Name="AbrirArquivo" Click="AbrirArquivo_Click">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="" FontSize="16" Margin="5,0,5,0" Visibility="Collapsed"/>
                                <TextBlock Text="Abrir" FontSize="14" Margin="0,0,5,0"/>
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                    <!-- Salvar arquivo -->
                    <MenuItem x:Name="SalvarArquivo" Click="SalvarArquivo_Click">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="" FontSize="16" Margin="5,0,5,0" Visibility="Collapsed"/>
                                <TextBlock Text="Salvar" FontSize="14" Margin="0,0,5,0"/>
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                    <!-- Salvar como -->
                    <MenuItem x:Name="SalvarArquivoComo" Click="SalvarArquivoComo_Click">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="" FontSize="16" Margin="5,0,5,0" Visibility="Collapsed"/>
                                <TextBlock Text="Salvar como..." FontSize="14" Margin="0,0,5,0"/>
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                    <!-- Fechar arquivo-->
                    <MenuItem x:Name="FecharArquivo" IsEnabled="False" Click="FecharArquivo_Click">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock Text="" FontSize="16" Margin="5,0,5,0" Visibility="Collapsed"/>
                                <TextBlock Text="Fechar arquivo" FontSize="14" Margin="0,0,5,0"/>
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                    <Separator/>
                    <!-- Sair do aplicativo -->
                    <MenuItem x:Name="Sair" Click="Sair_Click">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="" FontSize="16" Margin="5,0,5,0" Visibility="Collapsed"/>
                                <TextBlock Text="Sair do aplicativo" FontSize="14" Margin="0,0,5,0"/>
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                </MenuItem>

                <!-- Menu Editar -->
                <MenuItem x:Name="MenuEditar">
                    <MenuItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="" FontSize="16" Margin="5,0,5,0" Visibility="Collapsed"/>
                            <TextBlock Text="Editar" FontSize="16"/>
                        </StackPanel>
                    </MenuItem.Header>
                </MenuItem>

                <!-- Menu Exibir -->
                <MenuItem x:Name="MenuExibir">
                    <MenuItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="" FontSize="16" Margin="5,0,5,0" Visibility="Collapsed"/>
                            <TextBlock Text="Exibir" FontSize="16"/>
                        </StackPanel>
                    </MenuItem.Header>
                </MenuItem>
            </Menu>
        </Grid>
    </Grid>
</Page>
