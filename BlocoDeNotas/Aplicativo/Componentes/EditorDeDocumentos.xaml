<Page x:Class="BlocoDeNotas.Aplicativo.Componentes.EditorDeDocumentos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BlocoDeNotas.Aplicativo.Componentes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditorDeDocumentos" Loaded="Page_Loaded">

    <Grid>
        <TextBox x:Name="EditorDocumento" TextChanged="EditorDocumento_TextChanged" Stylus.IsFlicksEnabled="False" Cursor="IBeam">
            <TextBox.BorderThickness>0</TextBox.BorderThickness>
            <TextBox.Padding>15,10,15,10</TextBox.Padding>
            <TextBox.AcceptsTab>true</TextBox.AcceptsTab>
            <TextBox.AcceptsReturn>true</TextBox.AcceptsReturn>
            <TextBox.VerticalScrollBarVisibility>Auto</TextBox.VerticalScrollBarVisibility>
            <TextBox.TextWrapping>Wrap</TextBox.TextWrapping>
            <TextBox.TextAlignment>Left</TextBox.TextAlignment>
            <TextBox.FontFamily>Consolas</TextBox.FontFamily>
            <TextBox.FontSize>14</TextBox.FontSize>
            <TextBox.FontStyle>Normal</TextBox.FontStyle>
            <TextBox.FontWeight>Regular</TextBox.FontWeight>
        </TextBox>
    </Grid>
</Page>
