<UserControl x:Class="BlocoDeNotas.UI.Componentes.BarraDeMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BlocoDeNotas.UI.Componentes"
             mc:Ignorable="d" 
             d:DesignHeight="36" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu Grid.ColumnSpan="3">
            <MenuItem Padding="5,7,5,6" Margin="5,0,0,0">
                <MenuItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📁" FontSize="16" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Arquivo" FontSize="14" Margin="5,0,5,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem Padding="5,7,5,6" Margin="5,0,0,0">
                <MenuItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📝" FontSize="16" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Editar" FontSize="14" Margin="5,0,5,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Padding="5,7,5,6" Margin="5,0,0,0">
                <MenuItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="👁️" FontSize="16" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Exibir" FontSize="14" Margin="5,0,5,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </MenuItem.Header>
            </MenuItem>
        </Menu>
        <Menu Grid.Column="2" HorizontalAlignment="Right">
            <MenuItem x:Name="Avancar" FontSize="16" Header="Configurações" Click="Avancar_Click" Padding="5,7,5,6"/>
        </Menu>
    </Grid>
</UserControl>
